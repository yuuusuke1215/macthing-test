<div class="text-center">
  <h1>Sign up</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(model: @inquiry, local: true) do |f| %>
      
      <% if @inquiry.image.present? %>
        <%= image_tag @inquiry.image, id: :img_prev %>
      <% else %>
        <%= image_tag "hoshifuri.png", :size =>'100x100', id: :img_prev %>
      <% end %>
      <%= f.file_field :image, id: :user_img %>
      <div class="form-group">
        <%= f.label :name, 'Name' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <%= f.submit 'Sign up', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>